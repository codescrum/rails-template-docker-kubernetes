{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "mongo",
    "labels": {
      "name": "mongo",
      "role": "mongo"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "mongo",
        "image": "mongo:3.0",
        "ports": [
          {
            "name": "mongo",
            "containerPort": 27017
          }
        ]
      }
    ]
  }
}
